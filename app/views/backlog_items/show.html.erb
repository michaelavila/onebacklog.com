<span class='position'><%= @backlog_item.position %></span>

<h1><%= @backlog_item.name %> </h1>

<span><span class='muted'>status</span> <em>Currently <span class='status'><%= @backlog_item.status %></span></em><span>

<span class='tags'>
    <% @backlog_item.project_list.each do |project| %>
      <span class='label'><%= @backlog_item.project_list %></span>
    <% end %>
    <% @backlog_item.label_list.each do |label| %>
      <span class='label label-inverse'><%= @backlog_item.label_list %></span>
    <% end %>
</span>

<hr>

<div class='description'>
  <p><%= @backlog_item.description %></p>
</div>

<hr>

<div class="discussion">
  <strong>Comments</strong>
  <% @backlog_item.comments.each do |comment| %>
    <p><%= comment.comment %></p>
  <% end %>
</div>

<div class='dates muted'>
  Created by <strong><%= @backlog_item.creator.email %></strong> <%= time_ago_in_words @backlog_item.created_at %> ago and <strong>last updated</strong> <%= time_ago_in_words @backlog_item.updated_at %> ago
</div>
